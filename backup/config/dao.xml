		</constructor-arg>
		<property name="sessionFactory">
			<ref bean="sessionFactory" />
		</property>
	</bean>

	<bean id="testResultDAO" class="dao.ServiceDAOImpl" singleton="false">
		<constructor-arg>
			<value>model.TestResult</value>
		</constructor-arg>
		<property name="sessionFactory">
			<ref bean="sessionFactory" />
		</property>
	</bean>
	


	<bean id="questionTypeDAO" class="dao.ServiceDAOImpl"
		singleton="false">
		<constructor-arg>
			<value>model.QuestionType</value>
		</constructor-arg>
		<property name="sessionFactory">
			<ref bean="sessionFactory" />
		</property>
	</bean>
	<bean id="questionAnswerRelationshipDAO" class="dao.ServiceDAOImpl"
		singleton="false">
		<constructor-arg>
			<value>model.QuestionAnswerRelationship</value>
		</constructor-arg>
		<property name="sessionFactory">
			<ref bean="sessionFactory" />
		</property>
	</bean>

	<bean id="testTakerDAO" class="dao.ServiceDAOImpl" singleton="false">
		<constructor-arg>
			<value>model.TestTaker</value>
		</constructor-arg>
		<property name="sessionFactory">
			<ref bean="sessionFactory" />
		</property>
	</bean>
	
	<bean id="testTypeDAO" class="dao.ServiceDAOImpl" singleton="false">
		<constructor-arg>
			<value>model.TestType</value>
		</constructor-arg>
		<property name="sessionFactory">
			<ref bean="sessionFactory" />
		</property>
	</bean>

	<bean id="sessionFactory"
		class="org.springframework.orm.hibernate3.LocalSessionFactoryBean">
		<property name="dataSource">
			<ref bean="dataSource" />
		</property>

		<property name="mappingDirectoryLocations">
			<list>
				<value>WEB-INF/mappings</value>
			</list>
		</property>

		<property name="hibernateProperties">
			<props>
				<prop key="hibernate.dialect">
					org.hibernate.dialect.MySQL5Dialect
				</prop>
				<prop key="hibernate.show_sql">true</prop>
				<prop key="hibernate.cache.use_query_cache">false</prop>
				<prop key="hibernate.generate_statistics">true</prop>
				<prop key="hibernate.cache.use_structured_entries">
					true
				</prop>
				<prop key="hibernate.cache.use_second_level_cache">
					false
				</prop>
				<!--  <prop key="hibernate.connection.release_mode">auto</prop>-->
			</props>
		</property>
	</bean>

	<bean id="dataSource"
		class="org.springframework.jdbc.datasource.DriverManagerDataSource">
		<property name="url">
		
<!-- 		<value>jdbc:mysql://97.74.92.128:3306/techno1</value>  -->
 		<value>jdbc:mysql://localhost:3306/testprep</value> 
		</property>
		<property name="driverClassName">
			<value>com.mysql.jdbc.Driver</value>
		</property>
		<property name="username">
			<value>root1</value>
		</property>
		<property name="password">
			<value>12345</value>
		</property>
	</bean>
	
