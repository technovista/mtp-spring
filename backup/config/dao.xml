	</bean>

	<bean id="answerBankDAO" class="dao.ServiceDAOImpl" singleton="false">
		<constructor-arg>
			<value>model.AnswerBank</value>
		</constructor-arg>
		<property name="sessionFactory">
			<ref bean="sessionFactory" />
		</property>
	</bean>

	<bean id="testDAO" class="dao.ServiceDAOImpl" singleton="false">
		<constructor-arg>
